<div class = "row my-3">
  <div class = "col-md-6">
    <h1>New Category</h1>
      <%= form_for :category, url: categories_path do |f| %>
        <h2>
          <%= f.label :name %></br>
          <%= f.text_field :name %>
        </h2>
        <p>
          <%= f.submit :class => "btn btn-info"%>
        </p>
      <% end %>
    <%= link_to 'back', root_path, :class => "btn btn-primary" %>
  </div>
  <div class = "col-md-6">
    <h1>Categories</h1>
      <% @categories.each do |category|%>
        <ul>
          <li>
            <%=category.name%>
          </li>
        </ul>
    <%end%>
  </div>
</div>
