<div class = "row my-3">
  <div class = "col-md-12">
    <h1>New Post</h1>
      <%= form_for :post, url: posts_path do |f| %>
        <h2>
          <%= f.label :title %></br>
          <%= f.text_field :title %>
        </h2>
        <h3>
          <%= f.label :body %></br>
          <%= f.text_area :body %>
        </h3>
        <div class = "field">
          <%= f.label :categories %><br />
          <%= collection_check_boxes(:post, :category_ids, Category.all, :id, :name) do |b| %>
            <%= b.label(:"data-value" => b.value) { b.check_box + b.text } %>
          <% end %>
        </div>
        <p>
          <%= f.submit :class => "btn btn-info"%>
        </p>
      <% end %>
    <%= link_to 'back', root_path, :class => "btn btn-primary" %>
  </div>
</div>
