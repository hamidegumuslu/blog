<div class = "row my-3">
  <div class = "col-md-12">
    <h1>New Post</h1>
      <%= form_for :post, url: posts_path do |f| %>
        <h2>
          <%= f.label :title %></br>
          <%= f.text_field :title %>
        </h2>
        <h3>
          <%= f.label :body %></br>
          <%= f.text_area :body %>
        </h3>
        <p>
          <%= f.submit :class => "btn btn-info"%>
        </p>
      <% end %>
    <%= link_to 'back', root_path, :class => "btn btn-primary" %>
  </div>
</div>
