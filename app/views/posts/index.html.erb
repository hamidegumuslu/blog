<div class = "row">
  <div class = "col-md-12" align = "center">
    <h2>Blog Posts</h2>
    <table>
      <thead>
        <th>Post title</th>
        <th>Post Body</th>
        <th></th>
      </thead>
      <tbody>
        <% @posts.each do |post|%>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td>
              <%= link_to 'edit', edit_post_path(post.id) %>
              <%= link_to 'delete', post_path(post.id), method: :delete %>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>

    <%=link_to "new post", new_post_path %>
    <%= link_to "Sign out", destroy_user_session_path , method: :delete %>
  </div>
</div>
